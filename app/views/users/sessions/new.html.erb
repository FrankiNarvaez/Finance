<section class="flex justify-center items-center h-screen w-screen bg-gray-100">
  <div class="bg-white border border-gray-200 rounded-xl shadow-sm ">
    <div class="p-4 sm:p-7">
      <h2 class="block text-2xl font-bold text-gray-800 text-center mb-3"><%= t('.title') %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "block text-sm mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" %>
        </div>

        <div class="field mt-3">
          <div class="flex justify-between items-center">
            <%= f.label :password, class: "block text-sm mb-2" %>
            <%= link_to t('.forgot_password'), new_password_path(resource_name), class: "inline-flex items-center gap-x-1 text-sm text-blue-600 decoration-2 hover:underline focus:outline-none focus:underline font-medium" %>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center gap-1 mt-3">
            <%= f.check_box :remember_me, class: "shrink-0 mt-0.5 border-gray-200 rounded text-blue-600 focus:ring-blue-500" %>
            <%= f.label :remember_me, class: "text-sm" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit t('.login'), class: "w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none mt-3" %>
        </div>
      <% end %>

      <div class="text-center">
          <p class="mt-2 text-sm text-gray-600">
            <%= t('.no_account') %>
            <%= link_to t('.sign_up'), new_registration_path(resource_name), class: "text-blue-600 decoration-2 hover:underline focus:outline-none focus:underline font-medium" %>
          </p>
        </div>
    </div>
  </div>
</section>
