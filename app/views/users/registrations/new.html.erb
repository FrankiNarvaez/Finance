<section class="flex justify-center items-center h-screen w-screen bg-gray-100">
  <div class="bg-white border border-gray-200 rounded-xl shadow-sm ">
    <div class="p-4 sm:p-7">
      <h2 class="block text-2xl font-bold text-gray-800 text-center mb-3"><%= t('.title') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "block text-sm mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" %>
        </div>

        <div class="field mt-3">
          <div class="mb-2">
            <%= f.label :password, class: "text-sm" %>
            <% if @minimum_password_length %>
              <em class="text-sm text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password_confirmation, class: "block text-sm mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" %>
        </div>

        <div class="actions">
          <%= f.submit t('.sign_up'), class: "w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none mt-3" %>
        </div>
      <% end %>

      <div class="text-center">
        <p class="mt-2 text-sm text-gray-600">
          <%= t('.have_account') %>
          <%= link_to t('.sign_in'), new_session_path(resource_name), class: "text-blue-600 decoration-2 hover:underline focus:outline-none focus:underline font-medium" %>
        </p>
      </div>
    </div>
  </div>
</section>
